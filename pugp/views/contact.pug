extends base.pug

block scripts
    scripts(src='../static/index.js')

block style
    style
      include ../static/style.css
      include ../static/contact.css

block content
    div(class="container")
        h1 Contatc Us
        form(action="/contact", method="post" , class="farm")
            input(type="text",class="input",name=name,placeholder="enter the name")

            input(type="text",class="input",name=address,placeholder="enter the address")

            input(type="text",class="input",name=number,placeholder="enter the number")

            input(type="text",class="input",name=email,placeholder="enter the email")
            button(class="btn")
                | submit

